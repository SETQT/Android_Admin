<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_my_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rectangle_header"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_header" />

        <View
            android:id="@+id/icon_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_back"
            android:backgroundTint="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:text="Sản phẩm của tôi"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/icon_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/icon_search"
            android:backgroundTint="#FFFFFF" />

        <View
            android:id="@+id/icon_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/icon_chat"
            android:backgroundTint="#FFFFFF" />

        <View
            android:id="@+id/my_products_circle_red_cart"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/circle_red" />

        <TextView
            android:id="@+id/number_cart"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/admin_my_products_fragment_first"
        android:layout_width="411dp"
        android:layout_height="46dp"
        android:orientation="vertical" />

    <FrameLayout android:id="@+id/admin_my_products_fragment_second"
        android:layout_width="411dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <View
        android:id="@+id/custom_rectangle_footer"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_rectangle_footer"
        />

    <Button
        android:id="@+id/custom_rectangle_button_footer"
        android:layout_width="361dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-52dp"
        android:background="@drawable/custom_button_footer"
        android:text="Thêm 1 sản phẩm mới"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        />

</LinearLayout>