<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/custom_listview_payment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_product_payment">

        <ImageView
            android:id="@+id/custom_picture_payment"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_name_product"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:gravity="top"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size_color_product_payment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="45dp"
                android:gravity="top"
                android:textAppearance="@style/size_color_product_payment" />

            <TextView
                android:id="@+id/soluong_payment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="20dp"
                android:gravity="top"
                android:textAppearance="@style/size_color_product_payment" />

            <TextView
                android:id="@+id/custom_new_cost_product_payment"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="75dp"
                android:layout_marginRight="20dp"
                android:gravity="top"
                android:textColor="#F9A826"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/custom_old_cost_product_payment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="77dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/custom_new_cost_product_payment"
                android:foreground="@drawable/dashboard_custom_gridview_strikethrough"
                android:gravity="center"
                android:textColor="#AEAEAE"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_1_payment"
            android:layout_width="411dp"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="112dp"
            android:background="@drawable/line_profile" />


        <TextView
            android:id="@+id/total_cost_product_payment"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="120dp"
            android:layout_marginRight="33dp"
            android:gravity="top"
            android:textAppearance="@style/cost_product_payment" />

        <TextView
            android:id="@+id/text_thanhtien_payment"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="122dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/total_cost_product_payment"
            android:gravity="top"
            android:text="Thành tiền:"
            android:textAppearance="@style/text_thanhtien_payment" />

    </RelativeLayout>

</RelativeLayout>