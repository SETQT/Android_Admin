                    android:layout_width="87dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="288dp">

                    <View
                        android:id="@+id/iconProductAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_my_product" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Sản phẩm của tôi"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Doanh thu-->
                <RelativeLayout
                    android:id="@+id/revenueAdmin"
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="171dp"
                    android:layout_marginTop="288dp">

                    <View
                        android:id="@+id/iconRevenueAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_revenue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Doanh thu"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Hiệu quả bán hàng-->
                <RelativeLayout
                    android:id="@+id/effectivenessAdmin"
                    android:layout_width="95dp"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="292dp"
                    android:layout_marginTop="288dp">

                    <View
                        android:id="@+id/iconEffectivenessAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_effectiveness" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Hiệu quả bán hàng"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Mã giảm giá-->
                <RelativeLayout
                    android:id="@+id/voucherAdmin"
                    android:layout_width="62dp"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="361dp">

                    <View
                        android:id="@+id/iconVoucherAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_voucher" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Mã giảm giá"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Chương trình khuyến mãi-->
                <RelativeLayout
                    android:id="@+id/discountAdmin"
                    android:layout_width="69dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="363dp">

                    <View
                        android:id="@+id/iconDiscountAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_discount" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Chương trình khuyến mãi"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Danh sách khách hàng-->
                <RelativeLayout
                    android:id="@+id/listCustomerAdmin"
                    android:layout_width="60dp"
                    android:layout_height="58dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="304dp"
                    android:layout_marginTop="363dp">

                    <View
                        android:id="@+id/iconListCustomers"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_customer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Danh sách khách hàng"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>