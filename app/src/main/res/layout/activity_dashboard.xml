<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <!--    Tiêu đề  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/record_rectangle_header_profile"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_header" />

        <TextView
            android:id="@+id/admin"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="171dp"
            android:layout_marginTop="29dp"
            android:gravity="top"
            android:text="Admin"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/notify_admin"
            android:layout_width="20.57dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/icon_notify" />

        <View
            android:id="@+id/icon_chat"
            android:layout_width="23.62dp"
            android:layout_height="19.96dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="35.92dp"
            android:background="@drawable/icon_chat"
            android:backgroundTint="#FFFFFF" />

        <RelativeLayout
            android:layout_width="17.57dp"
            android:layout_height="17.57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="368.91dp"
            android:layout_marginTop="28dp">

            <View
                android:id="@+id/circle_red_chat_profile"
                android:layout_width="17.57dp"
                android:layout_height="17.57dp"
                android:background="@drawable/cycle_red" />

            <TextView
                android:id="@+id/id_cycle_red_admin"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </RelativeLayout>


    </RelativeLayout>

    <!--Đơn hàng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="411dp"
            android:layout_height="119dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="96dp"
            android:background="#ffffff" />

        <!--Đơn hàng và lịch sử -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="107dp"
                android:gravity="top"
                android:lineHeight="22sp"
                android:text="Đơn hàng"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!--  Lịch sử đơn hàng-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/infoOrder"
                    android:layout_width="102dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="263dp"
                    android:layout_marginTop="110dp"
                    android:gravity="top"
                    android:lineHeight="18sp"
                    android:text="Lịch sử đơn hàng"
                    android:textColor="#AEAEAE"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/baseline_arrow_profile"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="377dp"
                    android:layout_marginTop="113dp"
                    android:background="@drawable/icon_baseline_arrow" />
            </RelativeLayout>

            <!--Thanh kẻ ngăn cách-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/line" />
        </RelativeLayout>
        <!-- Thông tin  -->
        <!--Sản phẩm của tôi -->
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="159dp">
            <!-- Chờ xác nhận -->
            <RelativeLayout
                android:id="@+id/admin_wait_confirm"
                android:layout_width="69dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/number_confirm"
                    android:layout_width="6dp"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:lineHeight="24px"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="69dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Chờ xác nhận"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Chờ lấy hàng -->
            <RelativeLayout
                android:id="@+id/admin_wait_goods"
                android:layout_width="69dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp">

                <TextView
                    android:id="@+id/number_goods"
                    android:layout_width="6dp"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:lineHeight="24px"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="69dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Chờ lấy hàng"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Chờ giao hàng -->
            <RelativeLayout
                android:id="@+id/admin_wait_delivery"
                android:layout_width="69dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp">

                <TextView
                    android:id="@+id/number_delivery"
                    android:layout_width="6dp"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:lineHeight="24px"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="69dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Chờ giao hàng"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Đánh giá -->
            <RelativeLayout
                android:id="@+id/admin_wait_rate"
                android:layout_width="69dp"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp">

                <TextView
                    android:id="@+id/number_rate"
                    android:layout_width="6dp"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:lineHeight="24px"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="69dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Đánh giá"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


    <!-- Các tiện ích -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="411dp"
            android:layout_height="196dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="230dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Tiêu đề -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="241dp"
                    android:gravity="top"
                    android:lineHeight="22sp"
                    android:text="Các tiện ích"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--Thanh kẻ ngăn cách-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="274dp"
                    android:background="@drawable/line" />

            </RelativeLayout>

            <!-- Các tiện ích -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Sản phẩm của tôi-->
