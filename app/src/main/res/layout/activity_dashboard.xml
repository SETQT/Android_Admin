<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <!--    Tiêu đề  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <View
            android:id="@+id/record_rectangle_header_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_header" />

        <TextView
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="Admin"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/notify_admin"
            android:layout_width="20.57dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/icon_notify" />

        <View
            android:id="@+id/icon_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="322dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/icon_chat"
            android:backgroundTint="#FFFFFF" />

        <View
            android:id="@+id/icon_logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/icon_logout"
            android:backgroundTint="#FFFFFF" />

        <RelativeLayout
            android:layout_width="17.57dp"
            android:layout_height="17.57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="28dp">

        </RelativeLayout>


    </RelativeLayout>

    <!--Đơn hàng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="96dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#ffffff" />
        <!--Thanh kẻ ngăn cách-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/line" />
        <!--Đơn hàng và lịch sử -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/donHang"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:lineHeight="22sp"
                android:text="Đơn hàng"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!--  Lịch sử đơn hàng-->
            <RelativeLayout
                android:id="@+id/history_order"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/infoOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:lineHeight="18sp"
                    android:text="Lịch sử đơn hàng"
                    android:textColor="#AEAEAE"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/baseline_arrow_profile"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/icon_baseline_arrow" />
            </RelativeLayout>


        </RelativeLayout>
        <!-- Thông tin  -->
        <!--Sản phẩm của tôi -->
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="62dp">
            <!-- Chờ xác nhận -->
            <RelativeLayout
                android:id="@+id/admin_wait_confirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/number_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineHeight="24px"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Chờ xác nhận"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Chờ giao hàng -->
            <RelativeLayout
                android:id="@+id/admin_wait_delivery"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp">

                <TextView
                    android:id="@+id/number_wait_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineHeight="24px"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Chờ giao hàng"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Đã giao hàng -->
            <RelativeLayout
                android:id="@+id/admin_delivered"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp">

                <TextView
                    android:id="@+id/number_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineHeight="24px"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Đã giao hàng"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- Đánh giá -->
            <RelativeLayout
                android:id="@+id/admin_wait_rate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp">

                <TextView
                    android:id="@+id/number_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineHeight="24px"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:lineHeight="15sp"
                    android:text="Đánh giá"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


    <!-- Các tiện ích -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="235dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff" />


        <!--Thanh kẻ ngăn cách-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <!-- Tiêu đề -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:lineHeight="22sp"
                    android:text="Các tiện ích"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Các tiện ích -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="42dp">

                <!-- Sản phẩm của tôi-->
                <RelativeLayout
                    android:id="@+id/productAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="14dp">

                    <View
                        android:id="@+id/iconProductAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_my_product" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Sản phẩm của tôi"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Doanh thu-->
                <RelativeLayout
                    android:id="@+id/revenueAdmin"
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="171dp"
                    android:layout_marginTop="14dp">

                    <View
                        android:id="@+id/iconRevenueAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_revenue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Doanh thu"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Hiệu quả bán hàng-->
                <RelativeLayout
                    android:id="@+id/effectivenessAdmin"
                    android:layout_width="95dp"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="285dp"
                    android:layout_marginTop="14dp">

                    <View
                        android:id="@+id/iconEffectivenessAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_effectiveness" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Hiệu quả bán hàng"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Mã giảm giá-->
                <RelativeLayout
                    android:id="@+id/voucherAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="87dp">

                    <View
                        android:id="@+id/iconVoucherAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_voucher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Mã giảm giá"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Chương trình khuyến mãi-->
                <RelativeLayout
                    android:id="@+id/discountAdmin"
                    android:layout_width="69dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="87dp">

                    <View
                        android:id="@+id/iconDiscountAdmin"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_discount" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Chương trình khuyến mãi"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- Danh sách khách hàng-->
                <RelativeLayout
                    android:id="@+id/listCustomerAdmin"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="304dp"
                    android:layout_marginTop="87dp">

                    <View
                        android:id="@+id/iconListCustomers"
                        android:layout_width="38dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_customer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:lineHeight="15sp"
                        android:text="Danh sách khách hàng"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>